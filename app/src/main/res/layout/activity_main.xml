<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShareLink"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Share Link!"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/btnSharePhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/btnSharePhoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Share Photo!"
       app:layout_constraintBottom_toTopOf="@id/btnShareVideo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShareLink" />



    <Button
        android:id="@+id/btnShareVideo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Share Video!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSharePhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>